ex2
#include <stdio.h>
#include <stdlib.h>
#include <math.h>
int main(){
    int b;
    float a;
    printf("Digite seu a: ");
    scanf("%f",&a);
    printf("Digite seu b: ");
    scanf("%d",&b);
    a -=b;
    printf("a=%.1f\n",a);
    a *=4;
    printf("a=%.1f\n",a);
    a /=3;
    printf("a=%.1f\n",a);
     a +=2;
    printf("a=%.1f\n",a);
     b %=5;
    printf("b=%d\n",b);
    return 0;
}
