ex1
#include <stdio.h>
#include <stdlib.h>
#imclude <math.h>
#define PI 3.14

int main()
{
float raio, area;
    printf("Digite o raio \n");
    scanf("%f", &raio);
    area = PI * pow(raio,2);
    printf("Area total do circulo: %g \n", area);
    return 0;
}

