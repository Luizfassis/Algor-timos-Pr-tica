ex3 -tabuada
#include <stdio.h>
#include <stdlib.h>

int main(){
    int num,mult;
    mult=1;
    printf("digite a tabuada requerida: ");
    scanf("%d",&num);
    while (mult<=10)
{
printf("%dx%d=%d\n",num,mult,(mult*num));
mult++;
}
return 0;
}
