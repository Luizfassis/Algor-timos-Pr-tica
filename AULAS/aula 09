ex1
#include <stdio.h>
int main() {
for (int i = 1; i <= 50; i++) {
printf("%d\n", i);
}
return 0;
}
-------------------------------------------------------------------------------------------------------------
ex2
#include <stdio.h>
int main() {
for (int i = 50; i >= 1; i--) {
printf("%d\n", i);
}
return 0;
}
