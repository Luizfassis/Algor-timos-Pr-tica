ex2
#include <stdio.h>
#include <stdlib.h>

int main(){
    int D1,D2,escolha;
    D1=1;
    printf("Luiz Filipe de Assis\n");
    printf("RA:24012955\n");
    printf("digite o valor que quer resposta:");
    scanf("%d",&escolha);
    while(D1<=6){
            D2=1;
    while(D2<=6){
            if(D1+D2==escolha){
    printf("%d+%d=%d\n",D1,D2,escolha);
    }
    D2++;
    }
    D1++;
    }
    return 0;
}
